<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.a3isummit.threeisummit">


    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:hardwareAccelerated="false"
        android:icon="@drawable/applogo"
        android:label="@string/app_name"
        android:largeHeap="true"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.Light.NoActionBar">

        <!-- Activity Declarations -->
        <activity
            android:name="com.a3isummit.threeisummit.AppLoadingActivity"
            android:launchMode="singleTop"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.a3isummit.threeisummit.RegistrationActivity"
            android:launchMode="singleTop"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.a3isummit.threeisummit.HomescreenActivity"
            android:launchMode="singleTop"
            android:screenOrientation="portrait" />
        <activity android:name="com.a3isummit.threeisummit.InviteActivity" />
        <activity
            android:name="com.a3isummit.threeisummit.FeedbackActivity"
            android:launchMode="singleTop"
            android:screenOrientation="portrait" />
        <activity android:name="com.a3isummit.threeisummit.TestimonialActivity" />
        <activity android:name="com.a3isummit.threeisummit.GuestActivity" />
        <activity android:name="com.a3isummit.threeisummit.TestimonialAddActivity" />
        <activity
            android:name="com.a3isummit.threeisummit.GatePassActivity"
            android:label="@string/title_activity_gate_pass"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar" />

        <service android:name="com.a3isummit.threeisummit.MyFirebaseInstanceIDService">
            <intent-filter>
                <action android:name="com.google.firebase.INSTANCE_ID_EVENT" />
            </intent-filter>
        </service>

        <activity android:name="com.a3isummit.threeisummit.GuestCategoryActivity" />
        <activity android:name="com.a3isummit.threeisummit.GalleryActivity" />
        <activity android:name="com.a3isummit.threeisummit.DhruvActivity" />
        <activity android:name="com.a3isummit.threeisummit.ClassRoomOneActivity" />
        <activity android:name="com.a3isummit.threeisummit.ClassRoomTwoActivity"></activity>
    </application>

</manifest>