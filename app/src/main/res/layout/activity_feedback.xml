<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.a3isummit.threeisummit.FeedbackActivity">


    <RelativeLayout
        android:id="@+id/rl_toolbar_feedback"
        android:layout_width="match_parent"
        android:layout_height="@dimen/toolbar_height"
        android:paddingLeft="@dimen/toolbar_padding"
        android:paddingRight="@dimen/toolbar_padding"
        android:layout_alignParentTop="true"
        android:background="@drawable/bg_white_shadow_down">

        <RelativeLayout
            android:id="@+id/rl_toolbar_drawer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="10dp"
            android:layout_centerVertical="true">

            <ImageButton
                android:id="@+id/ib_toolbar_back"
                android:layout_width="@dimen/toolbar_button_height_width"
                android:layout_height="@dimen/toolbar_button_height_width"
                android:background="?attr/selectableItemBackground"
                android:padding="@dimen/toolbar_button_padding"
                android:src="@mipmap/icon_back_grey"
                android:scaleType="fitXY"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:onClick="ButtonClickBack"/>

        </RelativeLayout>

        <TextView
            android:id="@+id/tv_toolbar_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/rl_toolbar_drawer"
            android:layout_marginLeft="10dp"
            android:layout_centerVertical="true"
            android:textSize="@dimen/textsize_primary"
            android:textColor="@color/GREY_9"
            android:text="@string/activity_name_feedback"/>

    </RelativeLayout>


    <TextView
        android:id="@+id/tv1"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:text="@string/feedback_text"
        android:textAlignment="center"
        android:layout_marginTop="62dp"
        android:layout_marginLeft="60dp"
        android:layout_marginRight="60dp"
        android:layout_below="@+id/rl_toolbar_feedback"
        android:layout_centerHorizontal="true" />

    <EditText
        android:id="@+id/edtxt1"
        android:layout_width="160pt"
        android:layout_height="100dp"
        android:hint="Enter your Suggestion.."
        android:layout_above="@+id/edtxt2"
        android:layout_alignStart="@+id/edtxt2" />

    <EditText
        android:id="@+id/edtxt2"
        android:layout_width="160pt"
        android:layout_height="50dp"
        android:hint="Name(Optional)"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/bt1"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_marginTop="56dp"
        android:text="Submit"
        android:layout_below="@+id/edtxt2"
        android:layout_centerHorizontal="true"
        android:onClick="ButtonClickFetch"/>



</RelativeLayout>
