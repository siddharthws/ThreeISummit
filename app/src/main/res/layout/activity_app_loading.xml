<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_app_loading"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
    >

        <RelativeLayout
                android:id="@+id/rlAppLoadIcon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical" android:layout_alignParentTop="true"
                android:layout_alignParentStart="true">

            <TextView
                    android:id="@+id/tv_app_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Brand Slam"
                    android:textColor="@color/BLUE_LIGHT"
                    android:textSize="@dimen/textsize_page_title"
                    android:textStyle="bold"

                    android:layout_marginLeft="10dp"
                    android:background="@android:color/transparent"
                    android:layout_marginStart="13dp" android:layout_alignParentBottom="true"
                    android:layout_alignParentStart="true" android:layout_marginBottom="30dp"/>
        </RelativeLayout>

    </RelativeLayout>

</RelativeLayout>
