<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/cool_blue">



    <ScrollView
            android:id="@+id/scrollview_event"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
        >
            <TextView
                android:id="@+id/tv1"
                android:layout_height="wrap_content"
                android:layout_width="fill_parent"
                android:text="EVENT SCHEDULE"
                android:textAlignment="center"
                android:textSize="30dp"
                android:textStyle="bold"
                android:textColor="@color/WHITE"
                android:background="@color/BLACK"
                android:layout_below="@+id/rl_toolbar_feedback" android:layout_centerHorizontal="true"
              />
            <Button
                android:id="@+id/button_dhruv"
                android:textColor="#fff"
                android:layout_gravity="center"
                android:gravity="center"
                android:background="@drawable/buttonstyleselector"
                android:layout_marginTop="100dp"
                android:layout_width="300dp"
                android:layout_height="60dp"
                android:text="Dhruv Auditorium"
                android:textSize="18dp"

                android:onClick="ButtonClickDhruv"/>
            <Button
                android:id="@+id/button_clas1"
                android:textColor="#fff"
                android:layout_gravity="center"
                android:gravity="center"
                android:background="@drawable/buttonstyleselector"
                android:layout_marginTop="50dp"
                android:layout_width="300dp"
                android:layout_height="60dp"
                android:textSize="18dp"
                android:text="classroom 1"

                android:onClick="ButtonClickClass1"/>
            <Button
                android:id="@+id/button_clas2"
                android:textColor="#fff"
                android:layout_gravity="center"
                android:gravity="center"
                android:background="@drawable/buttonstyleselector"
                android:layout_marginTop="50dp"
                android:layout_width="300dp"
                android:layout_height="60dp"
                android:textSize="18dp"
                android:text="classroom 2"

                android:onClick="ButtonClickClass2"/>



        </LinearLayout>
    </ScrollView>

</RelativeLayout>