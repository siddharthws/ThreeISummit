<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.brandslam.threeisummit.ClassRoomTwoActivity"
    android:background="@color/WHITE">

    <RelativeLayout

        android:id="@+id/rl_toolbar_dhruv"
        android:layout_width="match_parent"
        android:layout_height="@dimen/toolbar_height"
        android:paddingLeft="@dimen/toolbar_padding"
        android:paddingRight="@dimen/toolbar_padding"
        android:layout_alignParentTop="true"
        android:background="@color/BLACK">

        <RelativeLayout
            android:id="@+id/rl_toolbar_drawer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="10dp"
            android:layout_centerVertical="true">

            <ImageButton
                android:id="@+id/ib_toolbar_back"
                android:layout_width="@dimen/toolbar_button_height_width"
                android:layout_height="@dimen/toolbar_button_height_width"
                android:background="?attr/selectableItemBackground"
                android:padding="@dimen/toolbar_button_padding"
                android:src="@mipmap/icon_back"
                android:scaleType="fitXY"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:onClick="ButtonClickBack"/>

        </RelativeLayout>

        <TextView
            android:id="@+id/tv_toolbar_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_toRightOf="@id/rl_toolbar_drawer"
            android:layout_marginLeft="10dp"
            android:layout_centerVertical="true"
            android:textSize="@dimen/textsize_primary"
            android:textColor="@color/WHITE"
            android:text="Class Room 2"/>

    </RelativeLayout>
    <ScrollView
        android:id="@+id/scrollview"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_below="@+id/rl_toolbar_dhruv"
        ><LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:padding="10dp"
            android:textSize="15dp"
            android:text="9:30 AM"
            android:textStyle="bold"
            android:textColor="@color/Indigo"/>
        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:padding="10dp"

            android:text="Inauguration in Dhruv Auditorium"
            android:textColor="@color/dark_brown"/>
        <!-- just draw a red line -->
        <View
            android:layout_height="2dip"
            android:layout_width="match_parent"
            android:background="@color/Indigo" />




        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:padding="10dp"
            android:textSize="15dp"
            android:text="12:00 noon"
            android:textStyle="bold"
            android:textColor="@color/Indigo"/>
        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:padding="10dp"

            android:text="Dr C M Dwivedi, Group Chief Human Resource Officer, Fazlani Group of Companies"
            android:textColor="@color/dark_brown"/>

        <!-- just draw a red line -->
        <View
            android:layout_height="2dip"
            android:layout_width="match_parent"
            android:background="@color/Indigo" />


        <TextView
            android:id="@+id/textView10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:padding="10dp"
            android:textSize="15dp"
            android:text="1:00 PM"
            android:textStyle="bold"
            android:textColor="@color/Indigo"/>
        <TextView
            android:id="@+id/textView11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:padding="10dp"
            android:textStyle="bold"
            android:text="LUNCH BREAK"
            android:textColor="@color/dark_brown"/>
        <!-- just draw a red line -->
        <View
            android:layout_height="2dip"
            android:layout_width="match_parent"
            android:background="@color/Indigo" />




        <TextView
            android:id="@+id/textView12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:padding="10dp"
            android:textSize="15dp"
            android:text="2:00 PM - 3:00 PM"
            android:textStyle="bold"
            android:textColor="@color/Indigo"/>
        <TextView
            android:id="@+id/textView13"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:padding="10dp"

            android:text="Dr Sanjay Muthal, Former Executive Director, RGF Management Search"
            android:textColor="@color/dark_brown"/>

        <!-- just draw a red line -->
        <View
            android:layout_height="2dip"
            android:layout_width="match_parent"
            android:background="@color/Indigo" />




        <TextView
            android:id="@+id/textView14"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:padding="10dp"
            android:textSize="15dp"
            android:text="3:00 PM - 4:00 PM"
            android:textStyle="bold"
            android:textColor="@color/Indigo"/>
        <TextView
            android:id="@+id/textView15"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:padding="10dp"

            android:text="S K Dutt, President Leadership &amp; HR Practice, First Equals Global"
            android:textColor="@color/dark_brown"/>
        <!-- just draw a red line -->
        <View
            android:layout_height="2dip"
            android:layout_width="match_parent"
            android:background="@color/Indigo" />

        <TextView
            android:id="@+id/textView19"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:padding="10dp"
            android:textSize="15dp"
            android:text="4:00 PM"
            android:textStyle="bold"
            android:textColor="@color/Indigo"/>
        <TextView
            android:id="@+id/textView20"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:padding="10dp"
            android:textStyle="bold"
            android:text="Pride of Maharashtra  / Indira Brand Slam Awards"
            android:textColor="@color/dark_brown"/>
        />




    </LinearLayout>





    </ScrollView>

</RelativeLayout>
