<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="?attr/selectableItemBackground">

    <RelativeLayout
        android:id="@+id/rl_drawer_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp">

        <ImageView
            android:id="@+id/ivDrawerIcon"
            android:layout_width="@dimen/toolbar_button_height_width"
            android:layout_height="@dimen/toolbar_button_height_width"
            android:padding="@dimen/toolbar_button_padding"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:scaleType="fitXY"/>

        <TextView
            android:id="@+id/tvDrawerTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/ivDrawerIcon"
            android:layout_marginLeft="15dp"
            android:layout_centerVertical="true"
            android:textStyle="bold"
            android:textSize="@dimen/textsize_primary_small"
            android:textColor="@color/GREY_9"/>

    </RelativeLayout>

    <View
        android:id="@+id/vw_drawer_group_separator"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/GREY_6"
        android:layout_marginRight="5dp"
        android:layout_marginLeft="5dp"
        android:visibility="gone"/>
    <View
        android:id="@+id/vw_drawer_item_separator"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/GREY_2"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:visibility="gone"/>

</RelativeLayout>