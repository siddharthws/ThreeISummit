<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="15dp"
    android:background="@drawable/bg_white_shadow">

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/textsize_primary_small"
        android:textStyle="bold"/>

    <View
        android:id="@+id/vw_separator"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/tv_name"
        android:layout_marginTop="5dp"
        android:background="@color/GREY_4" />

    <TextView
        android:id="@+id/tv_designation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/vw_separator"
        android:layout_marginTop="5dp"
        android:textSize="@dimen/textsize_description"
        android:textStyle="italic"/>

    <TextView
        android:id="@+id/tv_company"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_designation"
        android:layout_marginTop="2dp"
        android:textSize="@dimen/textsize_description"/>

</RelativeLayout>